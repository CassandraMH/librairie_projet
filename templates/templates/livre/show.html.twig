<title>{% block title %}Présentation du livre{% endblock %}</title>

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/icons/favicon-2.ico') }}">

{% block stylesheets %} 
    
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha512-MoRNloxbStBcD8z3M/2BmnT+rg4IsMxPkXaGh2zD6LGNNFE80W3onsAhRcMAMrSoyWL9xD7Ert0men7vR8LUZg==" crossorigin="anonymous" referrerpolicy="no-referrer" />        

{% endblock %}

{% block body %}
    <div class="container-fluid">
    {% include "inc/_adminsidebar.html.twig" %}
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Page</a></li>
            <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Dashboard</li>
          </ol>
          <h6 class="font-weight-bolder mb-0">Livre</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
          <div class="ms-md-auto pe-md-3 d-flex align-items-center">
          </div>
          <ul class="navbar-nav  justify-content-end">
            <li class="nav-item d-flex align-items-center">
              <a href="javascript:;" class="nav-link text-body font-weight-bold px-0">
                <i class="fa fa-user me-sm-1"></i>
                <span class="d-sm-inline d-none"><a href="{{ path('app_logout') }}">Déconnexion</a></span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
      <div class="container">
        <div class="row row-breadcrumb breadcrumb-fiche">
            <div class="col-sm-8 col-lg-10">
                <div class="hidden-xs">                                            
                    <div class="fiche-breadcrumb-title">Présentation de l'ouvrage n° {{ livre.id }}</div>
                    <br>
                </div>
            </div>
            <div class="row" itemscope="" itemtype="http://schema.org/Book">
                <div class="col-sm-4 livre-container">
                    <div class="couverture" data-ean="9782246827184" data-id="0-7019262">
                        <picture>
                            <img src="{{ livre.image }}" width="325px" height="500px"  class="couverture" itemprop="image" alt="">
                        </picture>
                    </div>
                    <br>
            <div class="row justify-content-around">
                <div class="col-4">
                    <button type="button" class="btn btn-light"><a href="{{ path('app_livre_edit', {'id': livre.id}) }}">Editer</a></button>
                </div>
                <div class="col-4">
                    {{ include('livre/_delete_form.html.twig') }}
                </div>
            </div>
            </div>
            <div class="col-sm-8">
                <div class="livre-container">
                    <h1 class="text-mulit-light text-black" itemprop="name">{{ livre.titre }}</h1>
                        <h2 class="text-mulit-bold text-black">de
                            <span itemprop="author">{{ livre.auteur }}</span>                                      
                        </h2>
                        <h5> {{ livre.genrelitteraire }} </h5>
                        <p class=" text-mulit-light mb-5">
                                <p class="public text-gray">
                                    Prix de l'ouvrage : {{ livre.prix }}€
                                </p>
                                <p class="public text-gray">
                                    Tout public
                                </p>
                                    
                    <div class="row mb-5 mt-30">
                        <div class="col-sm-6 col-lg-4 xs-mb-5">
                            <a href="#" rel="nofollow" class="btn-login-review text-mulit-light text-orange"><i class="fa fa-star" aria-hidden="true"></i> Donner votre avis sur ce livre</a>
                        </div>
                        <div class="col-sm-6 col-lg-4 xs-mb-5">
                            <span class="text-mulit-light text-orange"><a href="#" rel="nofollow" class="btn-login-wish-list text-orange"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter à votre liste d'envie</a></span>
                        </div>
                    </div>
                    <hr class="mt-0">
                        <div class="row mb-20">
                            <div id="4couv" class="col-xs-12"><h4 class="text-mulit-light text-orange">Quatrième de couverture</h4><p>
                                <b>{{ livre.titre }}</b>
                                </p><p>{{ livre.description }}</p></div>  
                            </div>
                        </div>
                    </div>

{% endblock %}
