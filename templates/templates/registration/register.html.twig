<title>{% block title %}Création de compte{% endblock %}</title>

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/icons/favicon.ico') }}">

{% block stylesheets %} 
    
            <!-- CSS secondaire de la page -->            
            <link rel="stylesheet" href="{{ asset('assets/css/material-dashboard.css') }}">

{% endblock %}

{% block body %}

<div class="container position-sticky z-index-sticky top-0">
    <div class="row">
      <div class="col-12">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg blur border-radius-lg top-0 z-index-3 shadow position-absolute mt-4 py-2 start-0 end-0 mx-4">
          <div class="container-fluid ps-2 pe-0">
            <a class="navbar-brand font-weight-bolder ms-lg-0 ms-3" href="{{ path('app_home')}}">
                Le comptoir de renard
            </a>
            <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon mt-2">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
              </span>
            </button>
            <div class="collapse navbar-collapse" id="navigation">
              <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                  <a class="nav-link me-2" href="{{ path('app_register')}}">
                    <i class="fas fa-user-circle opacity-6 text-dark me-1"></i>
                    S'enregistrer
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link me-2" href="{{ path('app_login')}}">
                    <i class="fas fa-key opacity-6 text-dark me-1"></i>
                    Connexion
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link me-2">
                    <i class="fas fa-key opacity-6 text-dark me-1"></i>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link me-2">
                    <i class="fas fa-key opacity-6 text-dark me-1"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <!-- End Navbar -->
      </div>
    </div>
  </div>
  <main class="main-content  mt-0">
    <section>
      <div class="page-header min-vh-100">
        <div class="container">
          <div class="row">
            <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 start-0 text-center justify-content-center flex-column">
              <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center" style="background-image: url('/assets/images/illustration-signup.jpg'); background-size: cover;">            
              </div>
            </div>
            <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
              <div class="card card-plain">
                <div class="card-header">
                  <h4 class="font-weight-bolder">Pas encore de compte ?</h4>
                  <p class="mb-0">Si tu n'as pas encore de compte, inscrit toi!{{ form_start(registrationForm) }}</p>
                </div>
                <div class="card-body">
                  <form role="form">
                    {{ form_row(registrationForm.email) }}

                    {{ form_row(registrationForm.pseudonym) }}

                    {{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                    }) }}

                    {{ form_row(registrationForm.agreeTerms) }}
                    <div class="text-center">
                      <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Validez {{ form_end(registrationForm) }}</button>
                    </div>
                  </form>
                </div>
                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                  <p class="mb-2 text-sm mx-auto">
                    Déjà un compte ?
                    <a href="{{ path('app_login')}}" class="text-primary text-gradient font-weight-bold">Connecte-toi !</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

{% endblock %}
